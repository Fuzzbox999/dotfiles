#!/bin/sh

. "$HOME/.cache/wal/colors.sh"

action=$(echo -e "Verrouiller\nArrêter\nRedémarrer"|dmenu -c -fn MesloLGS-10 -nb "$color0" -nf "$color7" -sb "$color10" -sf "$color0" -h 32 -bw 1 -l 3)

if [ $action == "Verrouiller" ]; then
	exec ~/.local/bin/i3/i3exit lock
elif [ $action == "Arrêter" ]; then
	poweroff
elif [ $action == "Redémarrer" ]; then
	reboot
fi
