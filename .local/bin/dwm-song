#!/bin/sh

song() {
	artist=$(ncmpcpp -q --current-song "%a") &>/dev/null
	title=$(ncmpcpp -q --current-song "%t") &>/dev/null
 	    if [[ -z ${artist} ]]; then
 	            icon=""
 	            sep=""
 	    else    icon="ïŽµ"
 	            sep="-"
 	    fi
	    echo "$icon $artist $sep $title"
}

echo "   $(song)"

