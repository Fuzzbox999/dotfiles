#!/bin/sh
#This script will only work with "cpuload" script launched on X session opening
#cpuload runs in the background and populates .local/tmp/cpu-load

. $HOME/.cache/wal/colors.sh
. $HOME/.local/tmp/cpu-load

high=75

if [ "$load" -gt $high ]; then
	color="^c#ff0000^"
	load=$load
	endcolor=""
else
	color="^c$background^"
	load=$load
	endcolor=""
fi

echo "^b$foreground^$color ï‹› $load%"

