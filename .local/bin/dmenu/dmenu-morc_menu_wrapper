#!/bin/sh

# Script called by /usr/bin/morc_menu as specified in $HOME/.config/morc_menu/morc_menu_v1.conf.
# It's a wrapper which applies the font and color theme imported from $HOME/.bin/dmenu/dmenu-theme-config to call dmenu
# dmenu-theme-config makes use of Pywal generated colors.

. "$HOME/.local/bin/dmenu/dmenu-theme-config"

display=$(i3-msg -t get_workspaces | jq '.[] | select(.focused == true) | .rect' |jq .width)

if [ $display = "1366" ]; then
	position='-x 0 -y 0 -W 250'
elif [ $display = "1600" ]; then
        position='-x 0 -y 0 -W 250'
elif [ $display = "1920" ]; then
	position='-x 0 -y 0 -W 250'
else position='-x 383 -y 180 -W 600'
fi

dmenu $height $position $font $colors -p i3 -i -l "$1"
