#!/bin/sh

. $HOME/.cache/wal/colors.sh

# Check 2 paths, because it varies from time to time on the T450s
temp_path3='/sys/devices/platform/coretemp.0/hwmon/hwmon6/temp1_input'
temp_path1='/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input'
temp_path2='/sys/devices/platform/coretemp.0/hwmon/hwmon7/temp1_input'
high=85
endcolor="^d^"

if [ -f "$temp_path1" ]; then
	temp_path=$temp_path1
elif [ -f "$temp_path2" ]; then
	temp_path=$temp_path2
elif [ -f "$temp_path3" ]; then
	temp_path=$temp_path3
else exit 0
fi

temp() {
	read core < $temp_path
	coretemp=$(($core/1000))
	if [ "$coretemp" -gt "$high" ]; then
		color="^c#ff0000^"
	else
		color="^c$background^"
	fi
	echo "$color^b$foreground^ $coretemp°C"
}

echo $(temp)

