#!/bin/sh
#Â Found on the web. Called by i3/config file

lock() {
    ~/.bin/locks
}

case "$1" in
    lock)
        /home/fuzzbox/.local/bin/i3/i3lock_custom
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        /home/fuzzbox/.local/bin/i3/i3lock_custom && systemctl suspend
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|reboot|shutdown}"
        exit 2
esac

exit 0
