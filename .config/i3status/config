# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
	color_good = "#6d6d6d"
	output_format = "i3bar"
	color_degraded = "#ff0000"
	color_bad = "#ff0000"
        interval = 6
}

# order += "ipv6"
# order += "load"
# order += "cpu_temperature 1"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "disk /"
order += "disk /media/mSata"
order += "ethernet _first_"
order += "wireless _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

volume master {
	format = " %volume"
	format_muted = " muted(%volume)"
	device = "pulse"
}

cpu_usage {
	format = " %usage"
	max_threshold = "75"
	format_above_threshold = " %usage"
}

wireless _first_ {
        format_up = " %essid"
        format_down = " down"
}

cpu_temperature 0 {
	format = " %degrees°C"
	max_threshold = 75
	format_above_threshold = "Warning  %degrees°C"
}

cpu_temperature 1 {
	format = "T1: %degrees°C"
	max_threshold = 50
	format_above_threshold = "Warning T: %degrees°C"

}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %ip"
        format_down = " down"
}

battery all {
        # format = "%status %percentage %remaining %consumption"
	format = "%status %percentage ( %remaining - %consumption )"
	
	status_chr = ""
        status_bat = ""
        status_full = ""

	integer_battery_capacity = true
	last_full_capacity = true
	threshold_type = percentage
	low_threshold = 20
}

tztime local {
	format = "%a %d %b - %H:%M "

}

load {
        format = " %1min"
}

disk "/" {
        format = " %avail"
	separator = false
}
disk "/media/mSata" {
        format = "%avail"
}

